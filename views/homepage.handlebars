<header class="display-flex justify-space-between align-center p-2">
      <h1>
        <span role="img" aria-label="notepad">🗒️</span>
        Tech Blog | Homepage
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/dashboard">dashboard</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
</header>

<div class="row">
  <div class="col-auto">
<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5" id="post-info">
    <h2>
      <a href="/blog-entries/{{post.id}}"id="post-title">{{post.title}}</a>
    </h2>
    <p>Created by {{user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.contents}}
    </p>
  </div>
</div>
{{/each}}

  </div>
</div>

